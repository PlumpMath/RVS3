                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BackgroundAnimation" Property="Background" Value="{StaticResource TimeBar_SelectionThumb_Thumbs_Background_MouseOver}" />
                            <Setter TargetName="BackgroundAnimation" Property="BorderBrush" Value="{StaticResource TimeBar_SelectionThumb_Thumbs_InnerBorder_MouseOver}" />
