    <ControlTemplate TargetType="RepeatButton" x:Key="HandleRepeatButton">
        <Grid x:Name="Root">
            
            <Border x:Name="Border" BorderThickness="{TemplateBinding BorderThickness}"
					CornerRadius="{StaticResource TimeBar_Slider_Handle_OuterBorder_CornerRadius}"
					BorderBrush="{TemplateBinding BorderBrush}"
                    Background="{TemplateBinding Background}">
                <Border x:Name="InnerBorder"
						CornerRadius="{StaticResource TimeBar_Slider_Handle_InnerBorder_CornerRadius}" 
                        Background="#01FFFFFF"/>
            </Border>
            <Path Fill="{TemplateBinding Foreground}"
                  x:Name="Path" Stretch="Fill"
				  HorizontalAlignment="Center" VerticalAlignment="Center" Width="4" Height="7"
				  RenderTransformOrigin="0.5,0.5"
				  Data="M6,0 L8,0 L8,14 L6,14 L6,12 L4,12 L4,10 L2,10 L2,8 L0,8 L0,6 L2,6 L2,4 L4,4 L4,2 L6,2 z" />
        </Grid>
        
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource TimeBar_Slider_Handle_OuterBorder_Over}" />
                <Setter TargetName="Border" Property="BorderThickness" Value="{StaticResource TimeBar_Slider_Handle_OuterBorder_BorderThickness_Over}" />
                <Setter TargetName="InnerBorder" Property="Background" Value="{StaticResource TimeBar_Slider_Handle_Background_Over}" />
                <Setter TargetName="InnerBorder" Property="BorderThickness" Value="{StaticResource TimeBar_Slider_Handle_InnerBorder_BorderThickness_Over}" />
                <Setter TargetName="InnerBorder" Property="BorderBrush" Value="{StaticResource TimeBar_Slider_Handle_InnerBorder_Over}" />
                <Setter TargetName="Path" Property="Fill" Value="{StaticResource TimeBar_Slider_Handle_Path_Background_Over}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource TimeBar_Slider_Handle_OuterBorder_Pressed}" />
                <Setter TargetName="Border" Property="BorderThickness" Value="{StaticResource TimeBar_Slider_Handle_OuterBorder_BorderThickness_Over}" />
                <Setter TargetName="InnerBorder" Property="Background" Value="{StaticResource TimeBar_Slider_Handle_Background_Pressed}" />
                <Setter TargetName="InnerBorder" Property="BorderThickness" Value="{StaticResource TimeBar_Slider_Handle_InnerBorder_BorderThickness_Over}" />
                <Setter TargetName="InnerBorder" Property="BorderBrush" Value="{StaticResource TimeBar_Slider_Handle_InnerBorder_Pressed}" />
                <Setter TargetName="Path" Property="Fill" Value="{StaticResource TimeBar_Slider_Handle_Path_Background_Pressed}" />
            </Trigger>
        </ControlTemplate.Triggers>
        
    </ControlTemplate>

