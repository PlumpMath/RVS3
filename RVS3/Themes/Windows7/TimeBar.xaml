                                BorderThickness="0,0,0,1" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
        
    <Style TargetType="timeBars:SelectionThumbPreview"
        
        x:Key="{telerikControls:ThemeResourceKey ThemeType=
        external:Windows7ThemeExternal , ElementType=timeBars:SelectionThumbPreview}"
         > 
        <Setter Property="BorderBrush" Value="{StaticResource TimeBar_SelectionThumbPreview_Background}" />
        <Setter Property="BorderThickness" Value="1" />
