<Style x:Key="RadScheduler_NavigationButtonStyle_Backward" TargetType="Button">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Grid Width="16" Height="16" >
						<Ellipse
							x:Name="OuterBorder"
							Stroke="{StaticResource RadScheduler_ViewModeButton_OuterBorderBrush_Normal}"
							Fill="{StaticResource RadScheduler_ViewModeButton_Background_Normal}" />
						<Ellipse
							x:Name="InnerBorder"
							Margin="1"
							Stroke="{StaticResource RadScheduler_ViewModeButton_InnerBorderBrush_Normal}" />
						
						<Path
							x:Name="Arrow"
							Width="5" Height="9"
							Fill="#FF1E395B"
							Data="F1 M1,0 L0,1 1,2 Z"
							Stretch="Uniform" />
						
						
					</Grid>
					
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="OuterBorder" Property="Stroke">
								<Setter.Value>
									<SolidColorBrush Color="#FFC0CBDF" />
								</Setter.Value>
							</Setter>
							<Setter TargetName="InnerBorder" Property="Stroke">
								<Setter.Value>
									<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
										<GradientStop Color="#CCFAFCFD" Offset="0"/>
										<GradientStop Color="#CCE4EFFB" Offset="1"/>
									</LinearGradientBrush>
								</Setter.Value>
							</Setter>
							<Setter TargetName="OuterBorder" Property="Fill">
								<Setter.Value>
									<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
										<GradientStop Color="#FFFDFEFF" Offset="0"/>
										<GradientStop Color="#FFDDE9F7" Offset="1"/>
										<GradientStop Color="#FFE6F0FA" Offset="0.5"/>
										<GradientStop Color="#FFDCE6F4" Offset="0.5"/>
									</LinearGradientBrush>
								</Setter.Value>
							</Setter>
						</Trigger>
						<Trigger Property="IsPressed" Value="True">
							<Setter TargetName="OuterBorder" Property="Stroke">
								<Setter.Value>
									<SolidColorBrush Color="#FFC0CBD9" />
								</Setter.Value>
							</Setter>
							<Setter TargetName="InnerBorder" Property="Stroke">
								<Setter.Value>
									<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
										<GradientStop Color="#FFC0CBD9"/>
										<GradientStop Color="#4CC0CBD9" Offset="0.5"/>
									</LinearGradientBrush>
								</Setter.Value>
							</Setter>
							<Setter TargetName="OuterBorder" Property="Fill">
								<Setter.Value>
									<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
										<GradientStop Color="#FFC0CBD9"/>
										<GradientStop Color="#4CC0CBD9" Offset="0.5"/>
									</LinearGradientBrush>
								</Setter.Value>
							</Setter>
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter TargetName="OuterBorder" Property="Stroke">
								<Setter.Value>
									<SolidColorBrush Color="#FFC0CBD9" />
								</Setter.Value>
							</Setter>
							<Setter TargetName="InnerBorder" Property="Stroke">
								<Setter.Value>
									<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
										<GradientStop Color="#FFC0CBD9"/>
										<GradientStop Color="#4CC0CBD9" Offset="0.5"/>
									</LinearGradientBrush>
								</Setter.Value>
							</Setter>
							<Setter TargetName="OuterBorder" Property="Fill">
								<Setter.Value>
									<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
										<GradientStop Color="#FFC0CBD9"/>
										<GradientStop Color="#4CC0CBD9" Offset="0.5"/>
									</LinearGradientBrush>
								</Setter.Value>
							</Setter>
						</Trigger>
					</ControlTemplate.Triggers>
					
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
